    "stable": true,
    "deprecated": false,
    "stars": 1,
    "monthly_pulls": 683,
    "tags": [
        {
            "tag": "latest",
            "desc": "Stable releases"
        }
    ],
    "architectures": [
        {
            "arch": "x86_64",
            "tag": "latest"
        },
        {
            "arch": "arm64",
            "tag": "arm64v8-latest"
        }
    ],
    "changelog": [
        {
            "date": "2024-02-10",
            "desc": "Update Readme with new env vars and ingest proper PWA icon."
        },
        {
            "date": "2023-12-07",
            "desc": "Initial Release."
        }
    ],
    "config": {
        "application_setup": "https://github.com/linuxserver/docker-calligra?tab=readme-ov-file#application-setup",
        "env_vars": [
            {
                "name": "PUID",
                "value": "1000",
                "desc": "User ID",
                "optional": false
            },
            {
                "name": "PGID",
                "value": "1000",
                "desc": "Group ID",
                "optional": false
            },
            {
                "name": "TZ",
                "value": "Etc/UTC",
                "desc": "Timezone",
                "optional": false
            },
            {
                "name": "TZ",
                "value": "Europe/London",
                "desc": "Specify a timezone to use EG Europe/London.",
                "optional": false
            }
        ],
        "volumes": [
            {
                "path": "/config",
                "host_path": "/path/to/config",
                "desc": "Users home directory in the container, stores local files and settings",
                "optional": false
            }
        ],
        "ports": [
            {
                "external": "3000",
                "internal": "3000",
                "desc": "Calligra desktop gui.",
                "optional": false
            },
            {
                "external": "3001",
                "internal": "3001",
                "desc": "Calligra desktop gui HTTPS.",
                "optional": false
            }
        ],
        "security_opt": [
            {
                "run_var": "seccomp=unconfined",
                "compose_var": "seccomp:unconfined",
                "desc": "For Docker Engine only, many modern gui apps need this to function on older hosts as syscalls are unknown to Docker.",
                "optional": true
            }
        ]
    }
}
