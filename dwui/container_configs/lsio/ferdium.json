{
    "name": "ferdium",
    "initial_date": "2023-12-07",
    "github_url": "https://github.com/linuxserver/docker-ferdium",
    "project_url": "https://ferdium.org/",
    "project_logo": "https://raw.githubusercontent.com/linuxserver/docker-templates/master/linuxserver.io/img/ferdium-logo.png",
    "description": "[Ferdium] is a desktop app that helps you organize how you use your favourite apps by combining them into one application.",
    "version": "v7.0.0-ls75",
    "version_timestamp": "2025-03-23 03:31:36+00:00",
    "category": "Chat,Social",
    "stable": true,
    "deprecated": false,
    "stars": 8,
    "monthly_pulls": 1700,
    "tags": [
        {
            "tag": "latest",
            "desc": "Stable releases"
        }
    ],
    "architectures": [
        {
            "arch": "x86_64",
            "tag": "latest"
        },
        {
            "arch": "arm64",
            "tag": "arm64v8-latest"
        }
    ],
    "changelog": [
        {
            "date": "2024-02-10",
            "desc": "Update Readme with new env vars and ingest proper PWA icon."
        },
        {
            "date": "2023-12-07",
            "desc": "Initial release."
        }
    ],
    "config": {
        "application_setup": "https://github.com/linuxserver/docker-ferdium?tab=readme-ov-file#application-setup",
        "env_vars": [
            {
                "name": "PUID",
                "value": "1000",
                "desc": "User ID",
                "optional": false
            },
            {
                "name": "PGID",
                "value": "1000",
                "desc": "Group ID",
                "optional": false
            },
            {
                "name": "TZ",
                "value": "Etc/UTC",
                "desc": "Timezone",
                "optional": false
            },
            {
                "name": "TZ",
                "value": "Europe/London",
                "desc": "Specify a timezone to use EG Europe/London.",
                "optional": false
            }
        ],
        "volumes": [
            {
                "path": "/config",
                "host_path": "/path/to/config",
                "desc": "Users home directory in the container, stores program settings and files.",
                "optional": false
            }
        ],
        "ports": [
            {
                "external": "3000",
                "internal": "3000",
                "desc": "Ferdium desktop gui.",
                "optional": false
            },
            {
                "external": "3001",
                "internal": "3001",
                "desc": "Ferdium desktop gui HTTPS.",
                "optional": false
            }
        ],
        "custom": [
            {
                "name": "shm-size",
                "name_compose": "shm_size",
                "value": "1gb",
                "desc": "Required for electron apps to fucntion properly.",
                "optional": false
            }
        ],
        "security_opt": [
            {
                "run_var": "seccomp=unconfined",
                "compose_var": "seccomp:unconfined",
                "desc": "For Docker Engine only, many modern gui apps need this to function on older hosts as syscalls are unknown to Docker.",
                "optional": true
            }
        ]
    }
}
